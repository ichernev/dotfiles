Config {
         font = "Droid Sans Mono 13"
       , bgColor = "black"
       , position = Static { xpos = 0, ypos = 0, width = 1500, height = 22 }
       , lowerOnStart = False
       , fgColor = "#dddddd"
       , border = NoBorder
       , borderColor = "black"
       , hideOnStart = False
       , persistent = True
       , commands = [
                    --   Run Weather "EGPF" ["-t","<station>: <tempC>C",
                    --                       "-L","18","-H","25",
                    --                       "--normal","green",
                    --                       "--high","red",
                    --                       "--low","lightblue"] 36000
                      Run Memory ["-t", "<usedratio>%"] 100
                    , Run Com "load_aver" [] "" 70
                    , Run Com "bat_state" [] "" 150
                    , Run Com "brightness" [] "brightness" 10
                    , Run Date "%a %e %b %H:%M" "date" 100
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "}%StdinReader% { [%bat_state% | %memory% | %load_aver%] <fc=#ffff00>%brightness%</fc> <fc=#00dd77>%vol_ctl%</fc> <fc=#ee9a00>%date%</fc>"
       }

-- vim: set filetype=haskell :
Config { -- font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
         font = "xft:DejaVu Sans Mono-11"
       , bgColor = "black"
       , position = Static { xpos = 0, ypos = 0, width = 1500, height = 22 }
       , lowerOnStart = False
       , fgColor = "grey"
       , border = NoBorder
       , borderColor = "black"
       , hideOnStart = False
       , persistent = True
       -- , position = TopW L 90
       , commands = [ -- Run Weather "LBSF" ["-t","<station>: <tempC>C","-L","64","-H","77","--normal","green","--high","red","--low","lightblue"] 36000
                      Run Weather "KPAO" ["-t", "<tempC>C",
                                          "-L", "64",
                                          "-H", "77",
                                          "--normal", "green",
                                          "--high", "red",
                                          "--low", "lightblue"
                                         ] 18000
                    -- , Run Cpu ["-t", "<total>",
                    --            "-L", "3", "-H", "50",
                    --            "--normal", "green", "--high", "red"
                    --           ] 10
                    , Run Memory ["-t", "<usedratio>%"] 100
                    -- , Run Com "disp_info" ["-xmobar"] "" 50
                    , Run Com "load_aver" [] "" 70
                    , Run Com "bat_state" [] "" 150
                    , Run Com "brightness" [] "brightness" 10
                    -- , Run Swap [] 10
                    , Run Date "%a %e %b %H:%M" "date" 100
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       -- add disp_info after eeepc_laptop is loaded
       , template = "%StdinReader% }{ [%bat_state% | %memory% | %load_aver%] <fc=#ffff00>%brightness%</fc> <fc=#00dd77>%vol_ctl%</fc> <fc=#ee9a00>%date%</fc> | %KPAO%"
       }
